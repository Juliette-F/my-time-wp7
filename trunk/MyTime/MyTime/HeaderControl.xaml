<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:System="clr-namespace:System;assembly=mscorlib" 
	x:Class="FieldService.HeaderControl"
	mc:Ignorable="d"
	d:DesignHeight="40" d:DesignWidth="465">
	
	<UserControl.FontFamily>
		<StaticResource ResourceKey="PhoneFontFamilyNormal"/>
	</UserControl.FontFamily>
	<UserControl.FontSize>
		<StaticResource ResourceKey="PhoneFontSizeNormal"/>
	</UserControl.FontSize>
	<UserControl.Foreground>
		<StaticResource ResourceKey="PhoneForegroundBrush"/>
	</UserControl.Foreground>
		<Grid x:Name="LayoutRoot" Background="{StaticResource AppBackgroundBrush}">
		<StackPanel Orientation="Horizontal">
			<Rectangle Height="30" Margin="1" Width="30" HorizontalAlignment="Right" Fill="{StaticResource AppForegroundBrush}">
				<Rectangle.OpacityMask>
					<ImageBrush ImageSource="{Binding IconSource}" Stretch="Fill" />
				</Rectangle.OpacityMask>
			</Rectangle>
			<TextBlock Margin="5" Height="30" FontWeight="Bold" FontSize="22" Text="{Binding HeaderText}" />
		</StackPanel>

	</Grid>
</UserControl>