<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="FieldService.HeaderControl"
	mc:Ignorable="d"
	d:DesignHeight="40" d:DesignWidth="465">
	
	<UserControl.FontFamily>
		<StaticResource ResourceKey="PhoneFontFamilyNormal"/>
	</UserControl.FontFamily>
	<UserControl.FontSize>
		<StaticResource ResourceKey="PhoneFontSizeNormal"/>
	</UserControl.FontSize>
	<UserControl.Foreground>
		<StaticResource ResourceKey="PhoneForegroundBrush"/>
	</UserControl.Foreground>
		<Grid x:Name="LayoutRoot" Background="{StaticResource AppBackgroundBrush}" Loaded="LayoutRoot_Loaded">
		<StackPanel Orientation="Horizontal">
			<Image x:Name="IconImage"  Height="30" Width="30" Source="{Binding IconSource}" Stretch="Fill" />
			<TextBlock x:Name="HeaderTextBlock" Margin="5" Height="30" FontWeight="Bold" FontSize="22" Text="{Binding HeaderText}" />
		</StackPanel>

	</Grid>
</UserControl>