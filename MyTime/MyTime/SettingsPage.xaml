    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <Grid Row="0">
            <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
                <TextBlock Style="{StaticResource PhoneTextNormalStyle}" x:Name="ApplicationTitle" Text="FIELD SERVICE" />
                <TextBlock Style="{StaticResource PhoneTextTitle1Style}" x:Name="PageTitle" Margin="9,-7,0,0" Text="settings" />
            </StackPanel>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <Grid x:Name="SettingsRoot">
                
            </Grid>
        </ScrollViewer>
        <Grid x:Name="FooterRoot" Row="2">
            <TextBlock Text="Copyright © Square.HipToBe 2012" />
        </Grid>
    </Grid>

